<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.krzkam.local.FirstActivity">

    <ImageButton
        android:id="@+id/B_localize"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#fff"
        android:fontFamily="sans-serif-condensed"
        android:icon="@drawable/globe"
        android:onClick="onLocalizeClick"
        android:text="Localize"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/globe"


        android:layout_marginBottom="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:padding="20dp"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:layout_marginRight="4dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/icons4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Icons made by "
            android:textColor="#000"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/icons3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/VectorsMarket"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/icons2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-condensed"
            android:text=" from "
            android:textColor="#000"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/icons1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#000"
            android:text="@string/Flat"
            android:textSize="10dp"
            android:linksClickable="true"
            android:autoLink="all"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
